<% article = ArticlePage.new(current_page) %>

<%= render_layout "layout" do %>
  <%= render Container.new(class_name: "mt-16 lg:mt-32") do %>
    <div class="xl:relative">
      <div class="mx-auto max-w-2xl">
        <a href="/articles" aria-label="Go back to articles" class="group mb-8 flex h-10 w-10 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 transition lg:absolute lg:-left-5 lg:mb-0 lg:-mt-2 xl:-top-1.5 xl:left-0 xl:mt-0">
          <%= inline_svg "icons/mini/arrow_left.svg", class: "h-3 w-3 stroke-zinc-500 transition group-hover:stroke-zinc-700" %>
        </a>

        <article>
          <header class="flex flex-col">
            <h1 class="mt-6 text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl">
              <%= article.title %>
            </h1>

            <time datetime="<%= article.date %>" class="order-first flex items-center text-base text-zinc-400">
              <span class="h-4 w-0.5 rounded-full bg-zinc-200"></span>
              <span class="ml-3"><%= article.formatted_date %></span>
            </time>
          </header>

          <div class="prose mt-8">
            <%= yield %>
          </div>
        </article>
      </div>
    </div>
  <% end %>
<% end %>
