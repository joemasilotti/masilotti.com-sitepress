<%= render Card.new(as: "article") do %>
  <%= render Card::Title.new(as: "h3", href:) do %>
    <%= title %>
  <% end %>

  <%= render Card::Eyebrow.new(decorate: true) do %>
    <%= event %>
  <% end %>

  <%= render Card::Description.new do %>
    <%= description %>
  <% end %>

  <%= render Card::Cta.new do %>
    <%= cta %>
  <% end %>
<% end %>
