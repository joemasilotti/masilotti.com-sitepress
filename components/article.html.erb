<%= content_tag :article, class: ["md:grid md:grid-cols-4 md:items-baseline": wide] do %>
  <%= render UI::Card.new(class_name: class_names("md:col-span-3": wide)) do %>
    <%= render UI::Card::Title.new(href: article.request_path) do %>
      <%= article.title %>
    <% end %>

    <% unless hide_date %>
      <%= render UI::Card::Eyebrow.new(as: "time", decorate: true, class_name: class_names("md:hidden": wide), datetime: article.date) do %>
        <%= article.formatted_date %>
      <% end %>
    <% end %>

    <%= render UI::Card::Description.new do %>
      <%= article.description %>
    <% end %>

    <%= render UI::Card::CTA.new do %>
      Read article
    <% end %>
  <% end %>

  <% if wide && !hide_date %>
    <%= render UI::Card::Eyebrow.new(as: "time", class_name: "mt-1 hidden md:block", datetime: article.date) do %>
      <%= article.formatted_date %>
    <% end %>
  <% end %>
<% end %>
