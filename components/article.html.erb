<%= content_tag :article, class: ["md:grid md:grid-cols-4 md:items-baseline": wide] do %>
  <%= render Card.new(class_name: class_names("md:col-span-3": wide)) do %>
    <%= render Card::Title.new(href: article.request_path) do %>
      <%= article.title %>
    <% end %>

    <%= render Card::Eyebrow.new(as: "time", decorate: true, class_name: class_names("md:hidden": wide), properties: {datetime: article.date}) do %>
      <%= article.formatted_date %>
    <% end %>

    <%= render Card::Description.new do %>
      <%= article.description %>
    <% end %>

    <%= render Card::Cta.new do %>
      Read article
    <% end %>
  <% end %>

  <% if wide %>
    <%= render Card::Eyebrow.new(as: "time", class_name: "mt-1 hidden md:block", properties: {datetime: article.date}) do %>
      <%= article.formatted_date %>
    <% end %>
  <% end %>
<% end %>
