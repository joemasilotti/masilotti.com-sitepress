<%= content_tag "li", class: "flex #{class_name}" do %>
  <%= link_to href, target: "_blank", class: "group flex items-center text-sm font-medium text-zinc-800 transition hover:text-primary-500" do %>
    <%= inline_svg "icons/#{icon}.svg", class: "h-6 w-6 flex-none text-zinc-500 transition group-hover:fill-primary-500" %>
    <span class="ml-4"><%= label %></span>
  <% end %>
<% end %>
