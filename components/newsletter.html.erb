  <h2 class="flex items-top text-xl sm:text-2xl font-semibold tracking-tight text-zinc-900">
    <%= inline_svg "icons/outline/envelope.svg", class: "h-7 w-7 sm:h-8 sm:w-8 flex-none text-zinc-500" %>
