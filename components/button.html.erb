<% if href %>
  <%= content_tag :a, href:, class: class_name, **properties do %>
    <%= title || content %>
    <% if icon %>
      <%= inline_svg "icons/#{icon}.svg", class: "ml-1 -mr-1 h-5 w-5" %>
    <% end %>
  <% end %>
<% else %>
  <%= content_tag :button, class: class_name, **properties do %>
    <%= title || content %>
  <% end %>
<% end %>
